<config>
    <modules>
        <Dc_Regions>
            <version>1.0.2</version>
        </Dc_Regions>
    </modules>
    <frontend>
        <layout>
            <updates>
                <regions>
                    <file>dc/regions.xml</file>
                </regions>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Dc_Regions after="Mage_Adminhtml">Dc_Regions_Adminhtml</Dc_Regions>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Dc_Regions>
                    <files>
                        <default>Dc_Regions.csv</default>
                    </files>
                </Dc_Regions>
            </modules>
        </translate>
        <layout>
            <updates>
                <regions>
                    <file>dc/regions.xml</file>
                </regions>
            </updates>
        </layout>
    </adminhtml> 
    <global>
        <blocks>
            <regions>
                <class>Dc_Regions_Block</class>
            </regions>
        </blocks>
        <helpers>
            <regions>
                <class>Dc_Regions_Helper</class>
            </regions>
        </helpers>
        <models>
            <regions>
                <class>Dc_Regions_Model</class>
            </regions>
        </models>
        <resources>
            <regions_setup>
                <setup>
                    <module>Dc_Regions</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </regions_setup>
            <regions_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </regions_write>
            <regions_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </regions_read>
        </resources>
    </global>
</config>
